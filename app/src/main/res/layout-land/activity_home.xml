<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background_main">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivAddPatient"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="41dp"
        android:src="@drawable/add_patient"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivListPatient"
        android:src="@drawable/patient_list"
        android:layout_marginRight="115dp"
        android:layout_marginEnd="115dp"
        android:layout_alignBottom="@+id/ivAddPatient"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Ajouter patient"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ivAddPatient"
        android:layout_alignStart="@+id/ivAddPatient"
        android:layout_below="@+id/ivAddPatient"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste patients"
        android:id="@+id/textView5"
        android:layout_below="@+id/ivListPatient"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignRight="@+id/ivListPatient"
        android:layout_alignEnd="@+id/ivListPatient" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivPatientVisit"
        android:src="@drawable/patient_visit"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivPatientOrder"
        android:src="@drawable/patient_order"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter visite "
        android:id="@+id/textView6"
        android:layout_below="@+id/ivPatientVisit"
        android:layout_alignRight="@+id/ivPatientVisit"
        android:layout_alignEnd="@+id/ivPatientVisit"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordonnance"
        android:id="@+id/textView7"
        android:textSize="15sp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginTop="5dp"/>

</RelativeLayout>